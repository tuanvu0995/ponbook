<nav class="pagination is-small" role="navigation" aria-label="pagination">
    @if(paginator.getPreviousPageUrl())
     <a class="pagination-previous" href="{{ paginator.getPreviousPageUrl() }}">Previous</a>
    @else
    <a class="pagination-previous is-disabled">Previous</a>
    @end

    @if(paginator.getNextPageUrl())
    <a class="pagination-next" href="{{ paginator.getNextPageUrl() }}">Next page</a>
    @else
    <a class="pagination-next is-disabled"">Next page</a>
    @end
    
    
    <ul class="pagination-list">
        @each(anchor in paginator.getUrlsForRange(1, paginator.lastPage))
        <li>
            @if(paginator.currentPage === anchor.page)
            <a class="pagination-link is-current">{{ anchor.page }}</a>
            @elseif(anchor.page === 1 || anchor.page + 3 < paginator.currentPage || anchor.page - 3 > paginator.currentPage)
            <a class="pagination-link" aria-label="Goto page {{ anchor.page }}" href="{{ anchor.url }}">{{ anchor.page }}</a>
            @else
            <span>...</span>
            @end
        </li>
        @endeach
    </ul>
</nav>