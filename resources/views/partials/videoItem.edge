<div class="card video-item__container"
    @if(isTransparent)
    style="background-color: transparent; box-shadow: none;"
    @end
    >
    <div class="card-image">
        <figure class="image">
            <div class="inner-image">
                <img src="{{ imageUrl(video.cover) }}" alt="{{ video.title }}">
            </div>
        </figure>
    </div>
    <div class="card-content">
        <div class="content">
            <a href="{{ route("videos.show", { uid: video.uid }) }}" class="content-title is-small is-link" title="{{ video.title }}">{{ video.title }}</a>
            @if(video.cast)
            <a class="is-size-7 has-text-weight-bold" href="{{ route("list.castBySlug", { slug: video.cast.slug }) }}">{{ video.cast.name }}</a>
            @end
            <div class="video__info">
                <strong>{{ video.code }}</strong>
                @if(video.commentCount)
                <span class="is-size-7">{{ video.commentCount }} comments</span>
                @end
            </div>
            <time class="is-size-7" datetime="{{ video.releaseDate || video.release_date }}">Released {{ video.releaseDate || video.release_date }}</time>
        </div>
    </div>
</div>