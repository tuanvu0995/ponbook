<div class="field">
    @if(label)
        <label class="label">{{label}}</label>
    @end
    <div class="control">
        <input class="input" type="{{ type || "text" }}" name="{{ name }}" placeholder="{{ placeholder }}" value="{{ value }}">
    </div>
    @if(errors)
        @each(message in errors)
        <p class="help is-danger">{{ message }}</p>
        @end
    @end
</div>